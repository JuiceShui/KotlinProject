<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@drawable/default_loading_dialog_bg"
        android:padding="@dimen/default_loading_dialog_padding">

        <fr.castorflex.android.circularprogressbar.CircularProgressBar
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:indeterminate="true"
            app:cpb_color="@color/theme_color"
            app:cpb_max_sweep_angle="300"
            app:cpb_min_sweep_angle="10"
            app:cpb_rotation_speed="1.0"
            app:cpb_stroke_width="3dp"
            app:cpb_sweep_speed="1.0" />
    </FrameLayout>


    <TextView
        android:id="@+id/default_loading_dialog_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/default_loading_dialog_tip_margin_top"
        android:textColor="@color/white_7"
        android:textSize="@dimen/default_loading_dialog_tip_text_size"
        android:visibility="gone" />
</LinearLayout>