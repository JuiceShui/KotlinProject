<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="app_bar_style" parent="android:Widget">
        <item name="app_bar_text_padding_horizontal">8dp</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="app_bar_title_text_appearance">@style/app_bar_text_style.title</item>
        <item name="app_bar_left_text_appearance">@style/app_bar_text_style.left</item>
        <item name="app_bar_right_text_appearance">@style/app_bar_text_style.right</item>
        <item name="app_bar_right_secondary_text_appearance">@style/app_bar_text_style.right
        </item>
    </style>

    <style name="app_bar_text_style.title" parent="app_bar_text_style">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="app_bar_text_style.left" parent="app_bar_text_style">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="app_bar_text_style.right" parent="app_bar_text_style">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="app_bar_text_style">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="app_tab_bar_style" parent="android:Widget">
        <item name="app_tab_bar_icon_width">24dp</item>
        <item name="app_tab_bar_icon_height">24dp</item>
        <item name="app_tab_bar_text_size">10sp</item>
        <item name="app_tab_bar_space_center">4dp</item>
        <item name="app_tab_bar_text_color">@color/default_text_weak</item>
        <item name="app_tab_bar_text_color_selected">@color/colorPrimary</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="edit_item_style" parent="android:Widget">
        <item name="android:background">@color/white</item>
        <item name="android:paddingLeft">@dimen/activity_margin</item>
        <item name="android:paddingRight">@dimen/activity_margin</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="ui_button_style" parent="android:Widget">
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="ui_background_color">@color/colorPrimary</item>
        <item name="ui_text_color">@color/white</item>
        <item name="ui_ripple_color">@color/black_3</item>
    </style>

    <!--style only for UIButton-->
    <style name="common_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginLeft">@dimen/activity_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_margin</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textSize">16sp</item>
        <item name="ui_border_radius">6dp</item>
        <item name="ui_text_color">@color/white</item>
        <item name="ui_background_color">@color/colorPrimary</item>
    </style>

</resources>